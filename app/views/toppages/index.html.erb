<% if logged_in? %>
  <div class="row">
    <div class="col-sm">
      <ul class="list-unstyled">
        <% @logs.each do |log| %>
          <li class="media mb-3">
            <img class="mr-2 rounded" src="<%= gravatar_url(log.user, { size: 50 }) %>" alt="">
            <div class="media-body">
              <div>
                <%= link_to log.user.name, logs_user_path(log.user) %> <span class="text-muted">posted at <%= log.created_at %></span>
              </div>
              <%= render 'logs/logs', logs: log %>
            </div>
          </li>
        <% end %>
        <%= paginate @logs %>
      </ul>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>旅のキロク～TabiLog～へようこそ。</h1>
      <h3>旅の思い出、旅の計画をキロクしましょう。</h3>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>